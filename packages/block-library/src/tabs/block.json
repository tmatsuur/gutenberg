{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "core/tabs",
	"title": "Tabs",
	"category": "design",
	"description": "Organize content into tabs.",
	"textdomain": "default",
	"__experimental": true,
	"allowedBlocks": [ "core/tab" ],
	"attributes": {
		"activeTab": {
			"type": "string",
			"default": ""
		}
	},
	"providesContext": {
		"tabs/activeTab": "activeTab"
	},
	"supports": {
		"align": [ "wide", "full" ],
		"html": false,
		"interactivity": true,
		"layout": {
			"default": { "type": "flex", "orientation": "horizontal" },
			"allowSwitching": false,
			"allowJustification": false
		},
		"shadow": true,
		"spacing": {
			"margin": true,
			"padding": true
		}
	},
	"style": "wp-block-tabs"
}
